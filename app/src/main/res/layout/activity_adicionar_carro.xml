<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="projetoi.meucarro.AdicionarCarroFragment">

    <Spinner
        android:id="@+id/adicionarCarroSpinnerMarca"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/adicionarCarroSpinnerModelo"
        android:layout_below="@+id/adicionarCarroSpinnerMarca"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/adicionarCarroSpinnerAno"
        android:layout_below="@+id/adicionarCarroSpinnerModelo"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editTextPlaca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adicionarCarroSpinnerAno"
        android:inputType="textCapCharacters"
        android:hint="@string/adicionarcarro_placahint" />

    <TextView
        android:id="@+id/adicionarCarroMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/adicionarCarroModelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/adicionarCarroMarca"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <Button
        android:id="@+id/confirmaAdicionarCarro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="@string/adicionarcarro_adicionartext"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/adicionarcarro_carroscadastradostext"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextPlaca"
        android:text="@string/adicionarcarro_dadoscarrotext"
        android:textAppearance="@android:style/TextAppearance.Medium" />


</RelativeLayout>
