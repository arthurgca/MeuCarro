<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="projetoi.meucarro.GasCalculatorActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/gasEditText"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/gascalculator_default_price"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:selectAllOnFocus="false"
        android:textAlignment="textEnd"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GasText"
        tools:ignore="RtlHardcoded" />

    <EditText
        android:id="@+id/alcoolEditText"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/gascalculator_default_price"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:selectAllOnFocus="false"
        android:textAlignment="textEnd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AlcoholText"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/gascalculator_calculate_text"
        tools:ignore="RtlHardcoded"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/alcoolEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/CurrencyTextViewforAlcohol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/gascalculator_brazilian_currency_symbol"
        android:textSize="@dimen/header_3"
        app:layout_constraintBottom_toBottomOf="@+id/alcoolEditText"
        app:layout_constraintRight_toLeftOf="@+id/alcoolEditText"
        app:layout_constraintTop_toTopOf="@+id/alcoolEditText"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/CurrencyTextViewforGas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/gascalculator_brazilian_currency_symbol"
        android:textSize="@dimen/header_3"
        app:layout_constraintBottom_toBottomOf="@+id/gasEditText"
        app:layout_constraintRight_toLeftOf="@+id/gasEditText"
        app:layout_constraintTop_toTopOf="@+id/gasEditText"
        app:layout_constraintVertical_bias="0.48"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/AlcoholText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/all_alchooltext"
        android:textSize="@dimen/header_4"
        app:layout_constraintLeft_toLeftOf="@+id/alcoolEditText"
        app:layout_constraintTop_toBottomOf="@+id/gasEditText"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/GasText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/all_gastext"
        android:textSize="@dimen/header_4"
        app:layout_constraintLeft_toLeftOf="@+id/gasEditText"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/gasCalculatorGraphView"
        android:layout_width="0dp"
        android:layout_height="@dimen/graph_height"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCalculate" />

</android.support.constraint.ConstraintLayout>
