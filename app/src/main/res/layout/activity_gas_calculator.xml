<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="projetoi.meucarro.GasCalculatorActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/gasEditText"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/gas_text"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:selectAllOnFocus="false"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        android:layout_marginLeft="0dp" />

    <EditText
        android:id="@+id/alcoolEditText"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/alcohol_text"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:selectAllOnFocus="false"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:text="@string/calculate_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textSize="@dimen/header_size"
        app:layout_constraintBottom_toTopOf="@+id/buttonCalculate"
        app:layout_constraintLeft_toLeftOf="@+id/buttonCalculate"
        app:layout_constraintRight_toRightOf="@+id/buttonCalculate"
        tools:text="Gasolina ou Ã¡lcool" />

    <TextView
        android:id="@+id/CurrencyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/brazilian_currency_symbol"
        android:textSize="@dimen/subheader_size"
        app:layout_constraintTop_toTopOf="@+id/alcoolEditText"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/alcoolEditText"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.619"
        app:layout_constraintRight_toLeftOf="@+id/alcoolEditText"
        android:layout_marginRight="0dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/brazilian_currency_symbol"
        android:textSize="@dimen/subheader_size"
        app:layout_constraintTop_toTopOf="@+id/gasEditText"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/gasEditText"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
