<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground"
    tools:context="projetoi.meucarro.HomeActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/textViewSeusCarros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appBarLayout"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="@string/home_carroatualtext"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="14sp" />

    <ListView
        android:id="@+id/homeListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewListGastos" />

    <TextView
        android:id="@+id/textViewListGastos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/home_preco_fipe"
        android:layout_below="@+id/qteKmsRodados"
        android:layout_toEndOf="@+id/home_precofipetxtview"
        android:background="@android:color/background_light"
        android:gravity="center"
        android:text="@string/home_listadegastostext"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/colorMainText"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_add_white_24dp" />


    <TextView
        android:id="@+id/home_nome_carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewSeusCarros"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/colorMainText"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/kmsRodadosHomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/home_precofipetxtview"
        android:paddingLeft="10dp"
        android:text="@string/home_kmsrodadostext"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/qteKmsRodados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/kmsRodadosHomeText"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@color/colorMainText"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/home_precofipetxtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/home_nome_carro"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:id="@+id/home_preco_fipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/kmsRodadosHomeText"
        android:layout_alignParentEnd="true"
        android:textAppearance="@android:style/TextAppearance.Small" />

</RelativeLayout>
