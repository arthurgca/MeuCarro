<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="projetoi.meucarro.HomeFragment">

    <TextView
        android:id="@+id/textViewSeusCarros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_carroatualtext"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_below="@+id/appBarLayout"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/homeListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewListGastos"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewListGastos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_listadegastostext"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_below="@+id/kmsRodadosHomeText"
        android:layout_alignParentStart="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_add_white_24dp" />


    <TextView
        android:id="@+id/home_nome_carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewSeusCarros"
        android:layout_alignParentEnd="true"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:id="@+id/kmsRodadosHomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="@string/home_kmsrodadostext"
        android:layout_below="@+id/home_precofipetxtview"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/qteKmsRodados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewListGastos"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/home_preco_fipe"
        android:text=""
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:id="@+id/home_precofipetxtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewSeusCarros"
        android:text="@string/home_precofipetxt"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:id="@+id/home_preco_fipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:layout_above="@+id/kmsRodadosHomeText"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
